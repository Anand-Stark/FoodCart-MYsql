<body>
<%- include('../includes/navigation.ejs') %>

<h1 style="text-align: center; color: white;  padding-top: 100px; ">My Cart</h1> 

<% if( products.length> 0) { %>
    <div class="ok-image">
    <div class="ok-container">

      <% for(let product of products ) { %>
        <div class="ok-product">
          <img src="<%= product.imageUrl %>" alt="products" >
          <figcaption>
            <%= product.title %>
          </figcaption>
          <figcaption>Price : <%= product.price %>
          </figcaption>
          <figcaption>Added Quantity : <%= product.cartItems.quantity %>

          </figcaption>
          <p>
            <%= product.description %>
          </p>
          

        </div>
        <% } %>
    </div>
  </div>
    <% } else { %>

      
      <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
          <h1 class="display-5 fw-bold">No Products Added To Cart ! ðŸ¥²</h1>
          <p class="col-md-8 fs-4">Please press the below button to add Products to your Cart </p>
          <a href="/"   class="btn btn-outline-warning btn-lg re-add-product-btn">Add Product</a>
        </div>
      </div>
    
      <% } %>







